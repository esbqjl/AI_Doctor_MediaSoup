@import 'nib';

global-reset();

@import './variables';
@import './mixins';
@import './fonts';
@import './reset';
@import './common'; // Import common styles here

html {
  height: 100%;
  box-sizing: border-box;
  background: #E3E3E3;
  background: linear-gradient(to top, #E3E3E3, #E3E3E3);
  font-family: 'Roboto';
  font-weight: 300;

  +desktop() {
    font-size: 16px;
  }

  +mobile() {
    font-size: 12px;
  }
}

body {
  height: 100%;
}

#mediasoup-demo-app-container {
  height: 100%;
  width: 100%;

  // Components
  @import './components/Room';
  @import './components/Me';
  @import './components/ChatInput';
  @import './components/Peers';
  @import './components/Peer';
  @import './components/PeerView';
  @import './components/Stats';
  @import './components/Ai';
  @import './components/Notifications';
  @import './components/NetworkThrottle';
  @import './components/NavBar';
  @import './components/Highlights';
  @import './components/HealthSummary';
  @import './components/DoctorSchedule';
  @import './components/DateDisplay';
  @import './components/TopBar';
  @import './components/SuggestedQuestion';
  @import './components/ClinicalCodes';
  @import './components/Widget';
  @import '../node_modules/react-grid-layout/css/styles.css' as css;
  @import '../node_modules/react-resizable/css/styles.css' as css;
}

#mediasoup-demo-app-media-query-detector {
  position: relative;
  z-index: -1000;
  bottom: 0;
  left: 0;
  height: 1px;
  width: 1px;

  +desktop() {}

  +mobile() {
    display: none;
    position: fixed;
  }
}
