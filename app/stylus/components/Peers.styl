[data-component='Peers'] {
	min-height: 100%;
	width: 100%;
	overflow: hidden;

	+desktop() {
		width: 100%;
		padding: 80px 0 220px 0;
	}

	+mobile() {
		min-height: 100vh;
		width: 100%;
		padding: 80px 0 0 0;
	}

	> .peer-container {
		overflow: hidden;

		AppearFadeIn(1000ms);

		+desktop() {
			flex: 0 0 auto;
			height: 382px;
			width: 450px;
			margin: 6px;
			border: 1px solid rgba(#fff, 0.15);
			box-shadow: 0px 5px 12px 2px rgba(#111, 0.5);
			transition-property: border-color;
			transition-duration: 0.35s;

			&.active-speaker {
				border-color: #fff;
			}
		}

		+mobile() {
			flex: 100 100 auto;
			order: 2;
			min-height: 25vh;
			width: 100%;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;

			&.active-speaker {
				order: 1;
			}
		}
	}

	.draggable-item {
		position: relative;  /* Ensure drag handle is inside grid item */
	}

	.draggable-item:hover .drag-handle {
		opacity: 0.9;  /* Hover makes handle more visible */
		background-color: rgba(192, 192, 192, 0.9);
	}

	.drag-handle {
		cursor: grab;
		padding: 5px;
		background-color: #C0C0C0;
		opacity: 0;  /* Hidden by default */
		transition: opacity 0.3s ease;  /* Smooth transition */
		position: absolute;  /* Position handle inside component */
		top: 0;
		left: 0;
		right: 0;
		text-align: center;
		border-top-left-radius: 7px;
		border-top-right-radius: 7px;
		border-bottom-left-radius: 0;
		border-bottom-right-radius: 0;
	}

	.special-drag-handle {
		position: relative;
		background-color: #B0B0B0;  /* Make it distinct */
		opacity: 0.8;
		cursor: grab;
	}
	
	+mobile() {
		.drag-handle {
			opacity: 1;  /* Visible by default on mobile */
			cursor: pointer;
		}
	}
}
