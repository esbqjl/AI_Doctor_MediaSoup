.widget-wrapper {
  border: 1px solid #ccc;
  background: #fff;
  border-radius: 4px;
  padding: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
}

.widget-header {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 8px;
}

.widget-header-icon {
  margin-left: 8px;
  cursor: pointer;
}

.widget-content {
  padding: 8px;
}

.widget-content.locked {
  pointer-events: none; /* 禁用点击事件 */
  opacity: 0.6; /* 更改外观 */
}
