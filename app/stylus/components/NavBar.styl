.nav-wrapper
  display: flex

[data-component='NavBar']
  position: fixed
  display: flex
  flex-direction: column
  align-items: center
  background-color: #0028F8
  padding: 10px
  height: 100vh
  width: 62px
  box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1)
  z-index: 1000

  .menu-icon
    font-size: 24px
    cursor: pointer
    margin-top: 20px
    color: #ffffff

  .popup-menu
    position: absolute
    top: 20px
    left: 70px 
    background-color: #ffffff
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2)
    border-radius: 4px
    z-index: 1001
    overflow: hidden

    .menu-item
      padding: 10px 20px
      white-space: nowrap
      cursor: pointer
      color: #0028F8
      transition: background-color 0.2s ease

      &:hover
        background-color: #f0f0f0

      &.active
        background-color: #0028F8
        color: #ffffff
