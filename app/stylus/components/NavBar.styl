.nav-wrapper
  display: flex

[data-component='NavBar']
  position: fixed
  display: flex
  flex-direction: column
  align-items: center
  background-color: #0028F8
  padding: 10px
  height: 100vh
  width: 62px
  box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1)
  z-index: 1000

  .icon
    margin: 20px 0
    font-size: 14px
    cursor: pointer
    transition: transform 0.2s ease
    width: 40px
    height: 40px
    display: flex
    align-items: center
    justify-content: center
    border-radius: 50%
    text-align: center
    background-color: #0028F8
    color: #ffffff

    &.active
      background-color: #ffffff
      color: #0028F8
