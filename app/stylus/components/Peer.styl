[data-component='Peer'] {
  flex: 100 100 auto;
  position: relative;
  height: 100%;
  width: 100%;

  +mobile() {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  > .indicators {
    position: absolute;
    z-index: 10;
    top: 0;
    right: 0;
    width: 150px;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
  }

  .peer-video {
    height: 100%; // Ensure video fits within peer container
    width: 100%;
    object-fit: cover; // Maintain aspect ratio and fill container
  }

  // Optional: If needed, force size constraints
  height: 200px;
  width: 300px;
  max-width: 100%;
  max-height: 100%;
}
